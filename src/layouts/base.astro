---
import Footer from '../components/footer.astro';
import Head from "../components/head.astro";
import Nav from "../components/nav.astro";

import "../styles/style.scss";
---

<html lang="en-us" class="w-full h-full bg-black">
	<Head content={Astro.props.content} />

	<body class="w-full min-h-screen flex flex-col
	bg-gradient-to-bl bg-fixed from-pink-900/75 to-rose-900/50  text-white">
		<Nav content={Astro.props.content} />
		<div class="content">
			<slot />
		</div>
		<Footer />	

		<script is:inline>
			function rgb() {
				document.body.style.transitionDuration = "1s";
				setInterval(() => {
					document.body.style.backgroundColor = "rgb(" + (Math.random() * 255) + ", " + (Math.random() * 255) + ", " + (Math.random() * 255) + ")";
				}, 1000);
			}
		</script>
	</body>
</html>