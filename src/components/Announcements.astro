---
const announcements = await Astro.glob("../announcements/*");
---

<style lang="scss">
	article {
		@apply border border-emerald-900 bg-black/25 p-4 text-start;

		:global(iframe, img) {
			@apply h-80 w-full;
		}
	}
</style>

<div class="columns">
	{
		announcements.map((page) => (
			<article>
				<page.Content />
			</article>
		))
	}
</div>
