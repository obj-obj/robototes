---
export interface Props {
	href?: URL | string;
	link?: boolean;
	klass?: string;
}

const { href, link = true } = Astro.props as Props;
let klass = Astro.props.klass;
if (href == Astro.url.pathname || href + "/" == Astro.url.pathname) {
	klass = "bg-rose-900/25";
}
---

<style>
	a {
		@apply w-full lg:w-max;
	}

	a,
	p {
		@apply flex h-full items-center rounded p-1 px-2 hover:bg-rose-900/25;
	}
</style>

<div class="h-full w-full border-cyan-800 lg:w-auto">
	{
		link ? (
			<a href={href} class={klass}>
				<slot />
			</a>
		) : (
			<p class={klass}>
				<slot />
			</p>
		)
	}
</div>
