---
import type { MarkdownHeading } from "astro";

export interface Props {
	headings: MarkdownHeading[];
	pages: Record<string, any>[];
}
const { pages, headings } = Astro.props;

function isCurrent(url: string) {
	return url == Astro.url.pathname || url + "/" == Astro.url.pathname;
}
---

<style>
	p {
		@apply px-2 pt-2 text-sm;
	}

	a {
		@apply h-max w-full rounded p-2 hover:bg-rose-900/25;
	}
</style>

<label
	for="sidebartoggle"
	class="ml-5 mt-5 w-min rounded border border-cyan-800 bg-secondary p-2 hover:bg-rose-900/25 lg:hidden"
>
	Pages
</label>

<input id="sidebartoggle" type="checkbox" class="peer hidden" />
<div
	id="sidebar"
	class="ml-5 mr-5 mt-5 hidden h-min flex-col gap-1 overflow-scroll rounded border border-cyan-800 bg-secondary p-1 peer-checked:flex md:sticky md:top-5 md:ml-10 md:max-h-[calc(100vh-2rem)] md:w-1/6 lg:flex"
>
	<p>Pages</p>
	<hr />
	{
		pages.map((page) => (
			<a
				rel="prefetch"
				class={`${isCurrent(page.url) ? " bg-rose-900/25" : ""}`}
				href={page.url}
			>
				{page.frontmatter.title}
			</a>
		))
	}

	{
		headings.length > 0 && (
			<>
				<p>Contents</p>
				<hr />
			</>
		)
	}
	{
		headings.map((heading) => (
			<a
				class={`${
					heading.depth > 1
						? heading.depth > 3
							? "text-xs"
							: " text-sm"
						: "text-base"
				}`}
				href={`#${heading.slug}`}
			>
				{heading.text}
			</a>
		))
	}
</div>
